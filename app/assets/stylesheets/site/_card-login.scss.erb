@media (min-width: 991px) {
  .owl {
      margin: auto;
      width: 211px;
      height: 108px;
      background-image: url(<%= asset_path 'head.png' %>);
      position: relative;
    }
    .owl .hand {
      width: 34px;
      height: 34px;
      border-radius: 40px;
      background-color: #f1a53f;
      transform: scaleY(0.6);
      position: absolute;
      left: 14px;
      bottom: -8px;
      transition: 0.3s ease-out;
    }
    .owl .hand.password {
      transform: translateX(42px) translateY(-15px) scale(0.7);
    }
    .owl .hand.hand-r {
      left: 170px;
    }
    .owl .hand.hand-r.password {
      transform: translateX(-42px) translateY(-15px) scale(0.7);
    }
    .owl .arms {
      position: absolute;
      top: 58px;
      height: 41px;
      width: 100%;
      overflow: hidden;
    }
    .owl .arms .arm {
      width: 50px;
      height: 65px;
      background-image: url(<%= asset_path 'arm.png' %>);
      position: absolute;
      left: 10px;
      top: 35px;
      transition: 0.3s ease-out;
    }
    .owl .arms .arm.password {
      transform: translateX(40px) translateY(-40px);
    }
    .owl .arms .arm.arm-r {
      left: 158px;
      transform: scaleX(-1);
    }
    .owl .arms .arm.arm-r.password {
      transform: translateX(-40px) translateY(-40px) scaleX(-1);
    }


  .form {
      margin: auto;
      margin-top: -9px;
      padding: 30px;
      background-color: #fff;
      border-radius: 15px;

      #form-label{
        p{
          text-align: center;
          font-size: 1.8em;
          font-weight: 200;
          color: #868887;

        }
      }

      .control {
          margin-bottom: 10px;
          position: relative;
          
          label {
            position: absolute;
            font-size: 21px;
            color: #868887;
            top: 40px;
            left: 25px;
            
          }

          input {
            padding: 9px 6px 9px 60px;
            border-radius: 10px;
            border: 0px solid #ccc;
            background-color: #e8e8e8;
            font-size: 1.1em;
            font-weight: 100;
            width: 100%;
            max-width: 100%;
            height: 55px;
          }

          .btn {
              width: 100%;
              height: 60px;
              padding: 10px;
              text-align: center;
              font-size: 24px;
              font-weight: 100;
              letter-spacing: 1px;;
              transition: 0.5s;
              background-size: 200% auto;
              color: white;
              border-radius: 10px;
              
              background-image: -moz-linear-gradient(to left, #ff957d 0%, #fec27c 50%,#ffe97c 100%); /* FF3.6-15 */
              background-image: -webkit-linear-gradient(to left, #ff957d 0%,#fec27c 50%,#ffe97c 100%); /* Chrome10-25,Safari5.1-6 */
              background-image: linear-gradient(to left, #ff957d 0%, #fec27c 50%,#ffe97c 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
          
              
              &:hover {
                  background-position: right center;
              }
          }
            
      }
  }
}


