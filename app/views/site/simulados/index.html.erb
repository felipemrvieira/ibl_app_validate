<h2>Simulados</h2>
<br>
<% @student_levels.each do |level| %>
    <div id="level">
    
 <a 
        data-toggle="collapse" 
        
        href="#<%= level.title %>" 
        role="button" 
        aria-expanded="false" 
        aria-controls="<%= level.title %>">
            <p class="level-label arrow"><%= level.title %>
            <i class="fa" aria-hidden="true"></i>
            </p>

        <a/>

    
        <div class="collapse show" id="<%= level.title %>">
  

            <% level.exams.each do |exam| %>
                <%= link_to exam.title, exam.attachment_url, target: '_blank', class: "btn botao-azul btn-simulado-margin" %>
            <% end %>

        </div>
    </div>
<% end %>


<br>
<br>
<%= link_to "Voltar", root_path, class: "btn btn-light " %>

<%= render 'partials/modal_config' %>    
