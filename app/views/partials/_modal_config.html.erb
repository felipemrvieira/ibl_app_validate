<!-- Modal de configuração do usuário -->
    <div class="modal fade" 
        id="modalConfig" 
        tabindex="-1" 
        role="dialog" 
        aria-labelledby="modalConfig"
        aria-hidden="true"
    >
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <!-- Modal header-->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!-- Modal header-->
                
                <!-- Modal body-->
                <div class="modal-body">
                <% student = current_student %>

                <%= form_with(model: student, local: true, url: site_students_path, autocomplete: "off") do |form| %>
                    <% if student.errors.any? %>
                        <div id="error_explanation">
                        <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

                        <ul>
                        <% student.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                        </ul>
                        </div>
                    <% end %>

                    <%= form.hidden_field :id, :value => student.id %>

                    <div class="field form-group ">
                        <div class="row">
                        <div class="col-sm-4">
                            <%= image_tag current_student.student_avatar.thumb.url || "avatar.png", 
                                id: "avatar",  width: "120px", height: "120px" %>
                        </div>
                        <div class="col-sm-8">
                            <%= form.file_field :student_avatar %>
                        </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="field form-group col-md-6">
                            <%= form.label :name %>
                            <%= form.text_field :name, class: "form-control" %>
                        </div>

                        <div class="field form-group col-md-6">
                            <%= form.label "Nascimento" %><br>
                            <%= form.date_select :birthday, 
                                    {
                                        :order => [:day, :month, :year], 
                                        :start_year => 1920, 
                                        :end_year => 2019
                                    }, 
                                    {:class => "form-control-inline"}  %>
                        </div>

                        <div class="field form-group col-md-6">
                            <%= form.label "Email" %>
                            <%= form.text_field :email, class: "form-control" %>
                        </div>

                        <div class="field form-group col-md-6">
                            <%= form.label "Telefone" %>
                            <%= form.text_field :phone, class: "form-control" %>
                        </div>

                        <div class="field form-group col-md-6">
                            <%= form.label "Senha" %>
                            <%= form.password_field :password, class: "form-control", autocomplete: "off"  %>
                        </div>

                        <div class="field form-group col-md-6">
                            <%= form.label "Confirmação de Senha" %>
                            <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "off"  %>
                        </div>

                        <div class="actions  col-md-12">
                            <%= form.submit "Enviar", :class => "btn btn-light" %>
                        </div>

                    </div>
                    </div>
                <% end %>


                </div>
                <!-- Modal body-->
            </div>
            <!-- Modal content-->
        </div>
        <!-- Modal dialog-->
    </div>
    <!-- Modal-->