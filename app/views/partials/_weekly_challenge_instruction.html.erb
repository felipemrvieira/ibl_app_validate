<div id="desafio">

  <div type="button" class="desafio-button" data-toggle="modal" data-target=".bd-example-modal-lg">
    <div>
      <p>Desafio semanal</p>
      <p>Teste seus conhecimentos antes que seja tarde!</p>
    </div>
    <div class="img-container">
      <%= image_tag "#{@weekly_challenge_exp}.png" %>
    </div>
  </div>

  <!-- Modal Aprender -->
    <div class="modal fade bd-example-modal-lg"
        tabindex="-1"
        role="dialog"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
    >
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
          <div id="modal-content-quiz-" class="modal-content ">

            <!-- Modal header Aprender-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- Modal header-->

            <!-- Modal body Aprender-->
            <div class="modal-body">

              <%= form_with url: "/site/student_instructions", local: true do |form| %>

                <h5 class="question-title">Instruções - Desafio Semanal</h5>

                <div class="question-description">
                  <% if @instruction %>
                    <%= raw @instruction.description %>
                  <% end %>
                </div>

              <br> <br> <br>
              <div class="actions action-container d-flex flex-row-reverse justify-content-between ">

                <%= form.submit "Continuar",
                  class: "btn",
                  id: ("botao-instrucao"),
                  data: { disable_with: false }
                %>

                <div class="form-check">
                  <input type="checkbox" class="form-check-input" id="exampleCheck1" required>
                  <label class="form-check-label" for="exampleCheck1">Não mostrar instruções novamente</label>
                </div>




              </div>
            <% end %>

            </div>
            <!-- Modal body Aprender-->









          </div>
      </div>
    </div>
  </div>
