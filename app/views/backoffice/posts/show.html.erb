<h1 class="page-header"><%= @post.title %></h1>

<div class="col-md-12">
  <div class="panel panel-default ">
    <div class="panel-heading">
      <%= @post.title %>
    </div>
    <div class="panel-body">
      <p>
        <strong>Imagem:</strong>
      </p>
      <p>
        <%= image_tag @post.image.url,  width: "300px" if @post.image.url%>
      </p>
      <p>
        <%= raw @post.body %>
      </p>
      <%= link_to 'Editar', edit_backoffice_post_path(@post), class: "btn btn-outline btn-primary" %>
      <%= link_to 'Excluir', backoffice_post_path(@post),  class: "btn btn-outline btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

  </div>
</div>
