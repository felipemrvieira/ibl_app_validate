
<h1 class="page-header">Galerias</h1>

    <div class="col-md-12">

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th ><%= @galleries.length %> resultados</th>
                    </tr>
                </thead>
                <tbody>
                    <% @galleries.each do |gallery| %>
                        <tr>
                            <td><%= gallery.id %></td>
                            <td>
                                <%= link_to backoffice_gallery_path(gallery), class: "btn btn-default btn-circle" do %>
                                    <i class="fa fa-search"></i>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="col-md-12">
                <div style="text-align: center;">      
                <%= pagy_bootstrap_nav(@pagy).html_safe %>
                </div>
            </div>  
        </div>
    </div>
