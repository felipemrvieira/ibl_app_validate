    </div>

    <div class="field form-group col-md-6">
      <%= form.label "Áudio" %>
      <%= form.file_field :attachment %>
    </div>

    <div class="actions  col-md-12">
      <%= form.submit "Enviar", :class => "btn btn-default" %>
    </div>
  </div>

