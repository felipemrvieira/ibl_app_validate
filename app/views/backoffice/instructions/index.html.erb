<h1 class="page-header">Instrições</h1>




<div class="row">
  <div id="instructions">


  <div class="col-md-12">

  <div class="table-responsive">
      <table class="table table-hover table-question">
        <thead>
          <tr>
            <th>Texto</th>
          </tr>
        </thead>

        <tbody>
          <% @instructions.each do |instruction| %>
            <tr>
              <td><%= raw instruction.description %></td>
              <td>
                <%= link_to backoffice_instruction_path(instruction), class: "btn btn-default btn-circle" do %>
                    <i class="fa fa-search"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
  <div class="col-md-12">
    <div style="">
      <%= link_to 'Nova Questão', new_backoffice_instruction_path, class: "btn btn-default" %>
      <br><br>
    </div>
  </div>

  </div>
</div>
<br>
