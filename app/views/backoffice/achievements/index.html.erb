
<h1 class="page-header">Conquistas</h1>


    <div class="col-md-12">

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Descrição</th>
                        <th>Badge</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @achievements.each do |achievement| %>
                        <tr>
                            <td><%= achievement.id %></td>
                            <td><%= achievement.description %></td>
                            <td><%= image_tag achievement.badge_path, width: "30px" %></td>
                            <td>
                                <%= link_to 'Editar', edit_backoffice_achievement_path(achievement), class: "btn btn-outline btn-primary" %>
                                <%= link_to 'Excluir', backoffice_achievement_path(achievement),  class: "btn btn-outline btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <div class="col-md-12">
                <div style="text-align: center;">      
                <%# pagy_bootstrap_nav(@pagy).html_safe %>
                </div>
            </div>  
        </div>
    </div>
