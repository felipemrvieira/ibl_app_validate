<h1 class="page-header">Conquistas por aluno</h1>

<div class="row">
<div class="col-md-12">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
          <tr>
            <th>ID</th>
            <th>Aluno</th>
            <th>Conquista</th>
            <th>Badge</th>
            <th>Data da conquista</th>
            <th ><%= @student_achievements.length %> resultados</th>
          </tr>
      </thead>
      <tbody>
      <% @student_achievements.each do |student_achievement| %>
        <tr>
          <td><%= student_achievement.id%></td>
          <td><%= student_achievement.student.name%></td>
          <td><%= student_achievement.achievement.description %></td>
          <td><%= image_tag student_achievement.achievement.badge_path, width: "30px" %></td>
          <td><%= student_achievement.created_at.strftime("%d/%m/%Y Ã s %T") %></td>
          <td>
            <%= link_to backoffice_student_achievement_path(student_achievement), class: "btn btn-default btn-circle" do %>
              <i class="fa fa-search"></i>
            <% end %>
          </td>
          
        </tr>
      <% end %>
          
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-12">
    <div style="text-align: center;">      
    <%# pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
</div>  

<br>

<%= link_to 'Nova Conquista', new_backoffice_student_achievement_path %>


</div>  
